<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Add Movie'}) %>
    <link rel="stylesheet" href="/styles/form.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>


    <form method="POST" action="/movies">
        <!-- name -->
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <br>
        <!-- Year -->
        <label for="year">Release Date:</label>
        <input type="date" id="year" name="year" min="1900" max="2050" required>
        <br>
        <!-- length -->
        <label for="length">Length:</label>
        <input type="number" id="length" name="length" min="0" required>
        <br>
        <!-- photo -->
        <label for="photo">Photo Link:</label>
        <input type="text" id="photo" name="photo" required>
        <br>
        <!-- description -->
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" required>
        <br>
        <input class="btn" type="submit" value="Create Movie">
    </form>
    <%- include('../partials/footer-wrap.ejs') %>

    <%- include('../partials/footer.ejs') %>
</body>

</html>